<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Solid white background with 90% opacity -->
    <solid android:color="#E6FFFFFF"/> <!-- #E6 = 90% opacity white -->

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Thin border -->
    <stroke
        android:width="1dp"
        android:color="#80FFFFFF"/> <!-- Semi-transparent white border -->

    <!-- Soft shadow -->
    <padding
        android:bottom="4dp"/>
</shape>