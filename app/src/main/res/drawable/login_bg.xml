<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="225"
                android:startColor="#1E3A8A"
                android:centerColor="#3B82F6"
                android:endColor="#1E40AF"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Foreground White Panel -->
    <item android:top="90dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners
                android:topLeftRadius="64dp"
                android:topRightRadius="64dp"/>
            <stroke
                android:width="1dp"
                android:color="#20000000"/>
            <padding android:bottom="4dp"/>
            <shadowColor android:color="#20000000"/>
        </shape>
    </item>

</layer-list>
